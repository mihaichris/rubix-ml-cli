{
    "name": "mihaichris/rubix-ml-cli",
    "description": "The Rubix ML Console Application",
    "keywords": [
        "rubix",
        "ml",
        "cli"
    ],
    "homepage": "https://github.com/mihaichris/rubix-ml-cli",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Mihai-Cristian Fagadau",
            "email": "contact@mihaifagadau.dev"
        }
    ],
    "require": {
        "php": "^8.1",
        "laminas/laminas-text": "^2.10",
        "laravel-zero/framework": "^10.0.2",
        "laravel-zero/framework": "^10.1.2",
        "nunomaduro/termwind": "^1.15.1",
        "rubix/ml": "^2.4"
    },
    "require-dev": {
        "laravel/pint": "^1.8",
        "mockery/mockery": "^1.5.1",
        "pestphp/pest": "^2.5",
        "rector/rector": "^0.15.24",
        "phpstan/phpstan": "^1.10.13",
        "infection/infection": "^0.26.21"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "infection/extension-installer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "bin": [
        "rubix-ml-cli"
    ],
    "scripts": {
        "refactor": "rector --ansi",
        "lint": "pint --ansi",
        "fix": [
            "@refactor",
            "@lint"
        ],
        "test:refactor": "rector --dry-run --ansi",
        "test:lint": "pint --test --ansi",
        "test:types": "phpstan analyse --ansi",
        "test:unit": "phpunit --colors=always --testsuite=Unit",
        "test:feature": "phpunit --colors=always --testsuite=Feature",
        "test:coverage:html": "phpunit --coverage-html ./build",
        "test:coverage:clover": "phpunit --coverage-clover coverage.xml",
        "test:mutation": "infection --min-msi=70 --min-covered-msi=70 --threads=max --ansi",
        "test": [
            "@test:refactor",
            "@test:lint",
            "@test:types",
            "@test:unit",
            "@test:feature",
            "@test:mutation"
        ]
    }
}
